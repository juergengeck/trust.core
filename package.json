{
  "name": "@trust/core",
  "version": "1.0.0",
  "description": "Trust Core - Platform-agnostic trust and identity management",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "find . -name '*.js' -not -path './node_modules/*' -not -path './packages/*' -delete"
  },
  "files": [
    "models/**/*.js",
    "models/**/*.d.ts",
    "types/**/*.js",
    "types/**/*.d.ts",
    "plans/**/*.js",
    "plans/**/*.d.ts",
    "services/**/*.js",
    "services/**/*.d.ts",
    "recipes/**/*.js",
    "recipes/**/*.d.ts",
    "*.ts"
  ],
  "exports": {
    "./models": "./models/index.js",
    "./models/*": "./models/*",
    "./types": "./types/index.js",
    "./types/*": "./types/*",
    "./plans": "./plans/index.js",
    "./plans/*": "./plans/*",
    "./services": "./services/index.js",
    "./services/*": "./services/*",
    "./recipes": "./recipes/index.js",
    "./recipes/*": "./recipes/*"
  },
  "author": "lama.one Team",
  "license": "MIT",
  "private": true,
  "peerDependencies": {
    "@refinio/one.core": "^0.6.1-beta-3",
    "@refinio/one.models": "^14.1.0-beta-5",
    "@refinio/api": "*"
  },
  "devDependencies": {
    "@refinio/one.core": "*",
    "@refinio/one.models": "*",
    "@refinio/api": "*",
    "@types/chai-as-promised": "^8.0.2",
    "@types/passport-http": "^0.3.11",
    "@types/qrcode": "^1.5.6",
    "@types/ws": "^8.18.1",
    "typescript": "^5.7.2"
  }
}
